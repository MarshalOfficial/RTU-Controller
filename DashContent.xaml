                        <Border Style="{StaticResource ItemBorder}" Grid.Column="2" >
                            <TextBlock Text="{Binding Value}" />
                        </Border>
                        <Border Style="{StaticResource ItemBorder}" Grid.Column="3" >
                            <TextBlock Text="{Binding SaveDateFa}" />
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

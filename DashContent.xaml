        <ListView x:Name="dgvLogs" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FlowDirection="RightToLeft">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel FlowDirection="RightToLeft" Orientation="Horizontal">
                        <TextBlock Text="{Binding InstructionName}" 
                           Margin="20,0,20,8"
                           FontSize="18" 
                           Foreground="DarkGray" />
                        <TextBlock Text="{Binding ResultName}" 
                           Margin="20,0,20,8"
                           FontSize="18"
                           Foreground="DarkGray" />
                        <TextBlock Text="{Binding Value}" 
                           Margin="20,0,20,8"
                           FontSize="18"
                           Foreground="DarkGray" />
                        <TextBlock Text="{Binding SaveDateFa}" 
                           Margin="20,0,20,8"
                           FontSize="18"
                           Foreground="DarkGray" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
